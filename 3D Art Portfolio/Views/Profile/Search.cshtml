@model IEnumerable<_3D_Art_Portfolio.Models.ApplicationUser>
@using _3D_Art_Portfolio.Models

@{
    ViewBag.Title = "Search";
}
@if (@Model.Count() > 0)
{
<table class="tabela" style="width:100%;">
    <thead>
        <tr>
            <th>Profile Picture</th>
            <th>User Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ApplicationUser a in @Model)
        {
            <tr>
                <td style="width:50%"><img class="smallProfilePicture" alt="@a.UserName" src=@Url.Content(a.ProfilePicture) /></td>
                <td><a href=@String.Format("/Profile/ViewProfile/" + @a.Id)>@@@a.UserName</a></td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <h4>No results :(</h4>
}

